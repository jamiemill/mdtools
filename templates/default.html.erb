<!doctype html>
<html>
	<head>
        <meta charset="UTF-8">
		<title><%= @title %></title>
		<style type="text/css">
            body {
                font-family: "Avenir Next", Avenir, sans-serif;
                font-size: 16px;
                line-height: 175%;
                color: #666;
                max-width: 60em;
                margin: 0 auto;
                padding: 1em;
            }
            h1,h2,h3,h4,h5 {
                color: #222;
                margin: 1em 0;
            }
            h3 {
                text-transform: uppercase;
            }
            h4 {
                text-transform: uppercase;
                color: #666;
            }
            h5 {
                color: #666;
            }
            pre,
            code {
                font-family: "Fira Mono", Menlo, monospace;
                font-size: 14px;
                line-height: 150%;
                background-color: #eee;
                padding: 0.5em;
                border-radius: 0.25em;
            }
            pre code {
                background: none;
                border: none;
            }
            .has-toc .content {
                margin-left: 17em;
            }
            .toc {
                font-size: 80%;
                float: left;
                width: 19em;
                margin-top: 3em;
            }
            .toc h2 {
                margin-top: 0;
                margin-bottom: 2em;
                text-transform: uppercase;
                color: #666;
                font-size: 1em;
            }
            .toc a {
                color: #666;
            }
            .toc ul, .toc li {
                padding: 0;
                margin: 0;
                list-style-type: none;
            }
            .toc ul ul {
                margin-left: 0.5em;
            }
		</style>
	</head>
    <body class="<%= @toc.length > 0 ? "has-toc" : "" %>">
		<%= @toc %>
        <div class="content">
		    <%= @content %>
        </div>
	</body>
</html>
